/*CONSTRUÇÃO DE ALGORITMOS

- Problema: Resolva a soma de 2 números
*/

programa
{
	funcao inicio()
	{
		//Declarando as variáveis
		inteiro s
		inteiro a
		inteiro b

		//Entrando com os valores das variáveis
		
escreva ("Entre com o valor de A \n")
		leia(a)

		escreva ("Entre com o valor de B \n")
		leia(b)		

		//processamento
		s = a + b

		//Saída ou resultado
		escreva("A soma e: ")
		escreva(s)
	}
}
